<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.wxcloudrun.dao.WxAccountMapper">

    <select id="findByWxOpenid" resultType="com.tencent.wxcloudrun.model.WxAccount" parameterType="java.lang.String">
        SELECT `id`, `openid`, `unionid`, `sessionKey`, `createdAt`, `updatedAt`
        FROM WxAccount
        WHERE openid = #{openid}
    </select>

    <select id="findByWxUid" resultType="com.tencent.wxcloudrun.model.WxAccount"  parameterType="java.lang.Integer">

        SELECT `id`, `nickName`, `avatarUrl`, `mobile`, `gender`, `country`, `province`, `city`, `openid`, `unionid`, `sessionKey`, `createdAt`, `updatedAt`
        FROM WxAccount
        WHERE id = #{id}
    </select>

    <update id="upsertWxAccount" parameterType="com.tencent.wxcloudrun.model.WxAccount">
        INSERT INTO `WxAccount`(`id`, `openid`, `unionid`, `sessionKey`)
        VALUE(#{id}, #{openid}, #{unionid}, #{sessionKey})
        ON DUPLICATE KEY UPDATE openid=#{openid}, unionid=#{unionid}, sessionKey=#{sessionKey}
    </update>

</mapper>
